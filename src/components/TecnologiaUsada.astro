---
const { nombre } = Astro.props;
---

<div>
    <slot />
    { nombre }
</div>

<style>
    div{
        background-color: grey;
        color: rgb(39, 39, 39);
        border-radius: 50px;
        padding: 0.5rem 1rem;
        font-size: 0.8em;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition:
			background-color 0.3s ease,
			color 0.3s ease;
    }

    body.dark-mode div{
        background-color: #374151;
        color: #cbd5e1;
        transition:
			background-color 0.3s ease,
			color 0.3s ease;
    }
</style>